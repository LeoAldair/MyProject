<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/person_icon"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/tvUserFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="NOMBRE(S):"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/tvUserFirstNameData"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvUserFirstNameData"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvUserFirstNameData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:text="Leonardo Aldair"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/tvUserFirstName"
        app:layout_constraintLeft_toRightOf="@id/tvUserFirstName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProfile"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvUserLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="APELLIDO(S):"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/tvUserLastNameData"
        app:layout_constraintLeft_toLeftOf="@id/tvUserFirstName"
        app:layout_constraintRight_toLeftOf="@id/tvUserLastNameData"
        app:layout_constraintTop_toBottomOf="@id/tvUserFirstName" />

    <TextView
        android:id="@+id/tvUserLastNameData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resendiz Pantoja"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/tvUserLastName"
        app:layout_constraintLeft_toRightOf="@id/tvUserLastName"
        app:layout_constraintRight_toRightOf="@id/tvUserFirstNameData"
        app:layout_constraintTop_toBottomOf="@id/tvUserFirstNameData"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="EMAIL:"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/tvUserEmailData"
        app:layout_constraintLeft_toLeftOf="@id/tvUserLastName"
        app:layout_constraintRight_toLeftOf="@id/tvUserEmailData"
        app:layout_constraintTop_toBottomOf="@id/tvUserLastName" />

    <TextView
        android:id="@+id/tvUserEmailData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="leo@gmail.com"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/tvUserEmail"
        app:layout_constraintLeft_toRightOf="@id/tvUserEmail"
        app:layout_constraintRight_toRightOf="@id/tvUserLastNameData"
        app:layout_constraintTop_toBottomOf="@id/tvUserLastNameData"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvUserQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="WISHLIST:"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/tvUserQuantityData"
        app:layout_constraintLeft_toLeftOf="@id/tvUserEmail"
        app:layout_constraintRight_toLeftOf="@id/tvUserQuantityData"
        app:layout_constraintTop_toBottomOf="@id/tvUserEmail" />

    <TextView
        android:id="@+id/tvUserQuantityData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/tvUserQuantity"
        app:layout_constraintLeft_toRightOf="@id/tvUserQuantity"
        app:layout_constraintRight_toRightOf="@id/tvUserEmailData"
        app:layout_constraintTop_toBottomOf="@id/tvUserEmailData"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvUserLevel"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="80dp"
        android:text="NIVEL: "
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@id/pgUserLevelData"
        app:layout_constraintLeft_toLeftOf="@id/tvUserQuantity"
        app:layout_constraintRight_toLeftOf="@id/pgUserLevelData"
        app:layout_constraintTop_toBottomOf="@id/tvUserQuantity"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/pgUserLevelData"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="3dp"
        android:max="100"
        android:min="0"
        android:progress="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvUserLevel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserQuantityData"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/tvUserLevelData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="Nivel 2"
        android:textColor="@color/teal_700"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.742" />

    <TextView
        android:id="@+id/tvUserLevelData2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:text="50 puntos para siguiente nivel."
        android:textColor="@color/teal_700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <Button
        android:id="@+id/btnUpdateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />
</androidx.constraintlayout.widget.ConstraintLayout>